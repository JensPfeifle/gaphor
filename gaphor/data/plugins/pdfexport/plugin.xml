<?xml version="1.0"?>
<!-- vim:sw=2:et:
-->
<gaphor-plugin name="PDF Export"
        version="0.1"
        author="wrobell">
  <description>
    Export diagram to a PDF (Portable Document Format) file.
  </description>

  <require>
    <module name="cairo"/>
  </require>

  <provide>
    <!--
      Actions should be defined on the module's toplevel (like in __init__.py).
    -->
    <action id="PDFExport"
            label="PDF Export"
            tooltip="Export the diagram to PDF"
            class="PDFExportAction" slot="FileExportSlot">
      <depends action="TabChange"/>
    </action>
  </provide>
</gaphor-plugin>
